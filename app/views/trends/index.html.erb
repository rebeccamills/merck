<p id="notice"><%= notice %></p>

<h1>Listing Trends</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Product</th>
      <th>Strength</th>
      <th>Marketshare</th>
      <th>Volume</th>
      <th>Dashboard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trends.each do |trend| %>
      <tr>
        <td><%= trend.country %></td>
        <td><%= trend.product %></td>
        <td><%= trend.strength %></td>
        <td><%= trend.marketshare %></td>
        <td><%= trend.volume %></td>
        <td><%= trend.dashboard %></td>
        <td><%= link_to 'Show', trend %></td>
        <td><%= link_to 'Edit', edit_trend_path(trend) %></td>
        <td><%= link_to 'Destroy', trend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Import Trends</h3>
<%= form_tag import_trends_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Trends" %>
<%= end %> 

<%= link_to 'New Trend', new_trend_path %>
